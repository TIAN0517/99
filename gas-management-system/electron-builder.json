{
    "productName": "Jy技術團隊 - 瓦斯行管理系統",
    "appId": "com.jytech.gas-management-system",
    "copyright": "Copyright © 2025 Jy技術團隊. All rights reserved.",
    "directories": {
        "output": "release"
    },
    "files": [
        "dist/**/*",
        "node_modules/**/*",
        "package.json"
    ],
    "extraMetadata": {
        "main": "dist/main/main.js"
    },
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            },
            {
                "target": "portable",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "assets/icons/icon.svg",
        "artifactName": "Jy-瓦斯行管理系統-2025-${version}-${arch}.${ext}",
        "publisherName": "Jy技術團隊"
    },
    "mac": {
        "target": [
            {
                "target": "dmg",
                "arch": [
                    "x64",
                    "arm64"
                ]
            }
        ],
        "icon": "assets/icons/icon.svg",
        "category": "public.app-category.business"
    },
    "linux": {
        "target": [
            {
                "target": "AppImage",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "assets/icons/icon.svg",
        "category": "Office"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "installerIcon": "assets/icon.ico",
        "uninstallerIcon": "assets/icon.ico",
        "installerHeaderIcon": "assets/icon.ico",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "language": "2052"
    },
    "publish": {
        "provider": "github",
        "owner": "jytech",
        "repo": "gas-management-system"
    }
}